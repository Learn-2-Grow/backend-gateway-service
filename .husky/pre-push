echo "${BOLD}[1/4] ğŸ” Running Linter...${NC}"
echo "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
npm run lint

# Check if lint made any changes
if ! git diff --quiet; then
  echo ""
  echo "${YELLOW}âš ï¸  Lint made changes, auto-committing...${NC}"
  git add .
  git commit -m "chore: auto-fix lint issues" --no-verify
  echo "${GREEN}âœ… Lint changes committed automatically${NC}"
else
  echo "${GREEN}âœ… No lint changes needed${NC}"
fi
echo ""

# Step 2: Test Check
echo "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo "${BOLD}[2/4] ğŸ§ª Running Tests...${NC}"
echo "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
if ! npm run test; then
  echo ""
  echo "${RED}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
  echo "${RED}â•‘${NC}  ${BOLD}âŒ ERROR: Tests Failed!${NC}                                  ${RED}â•‘${NC}"
  echo "${RED}â•‘${NC}  ğŸ“‹ Please fix the failing tests before pushing.            ${RED}â•‘${NC}"
  echo "${RED}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
  echo ""
  exit 1
fi
echo "${GREEN}âœ… All tests passed${NC}"
echo ""

# Step 3: Branch Protection
echo "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo "${BOLD}[3/4] ğŸ”’ Checking Branch Protection...${NC}"
echo "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
current_branch=$(git symbolic-ref --short HEAD)

if [ "$current_branch" = "main" ] || [ "$current_branch" = "master" ]; then
  echo ""
  echo "${RED}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
  echo "${RED}â•‘${NC}  ${BOLD}âŒ ERROR: Direct push to main is not allowed!${NC}           ${RED}â•‘${NC}"
  echo "${RED}â•‘${NC}  ğŸ“‹ Please create a feature branch and use Pull Request.    ${RED}â•‘${NC}"
  echo "${RED}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
  echo ""
  exit 1
fi
echo "${GREEN}âœ… Branch protection passed (${current_branch})${NC}"
echo ""

# Step 4: Generate Package Info
echo "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo "${BOLD}[4/4] ğŸ“¦ Generating Package Information...${NC}"
echo "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
npm run generate:packages

if ! git diff --quiet package.md; then
  echo ""
  echo "${YELLOW}âš ï¸  Detected changes in package.md, adding to commit...${NC}"
  git add package.md
  git commit -m "update package.md file"
  echo "${GREEN}âœ… package.md updated and committed${NC}"
else
  echo "${GREEN}âœ… package.md is up to date${NC}"
fi
echo ""

# Success message
echo "${GREEN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
echo "${GREEN}â•‘${NC}              ${BOLD}âœ… All Pre-Push Checks Passed!${NC}                 ${GREEN}â•‘${NC}"
echo "${GREEN}â•‘${NC}              ${BOLD}ğŸš€ Pushing to remote...${NC}                       ${GREEN}â•‘${NC}"
echo "${GREEN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo ""
